{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["*", "src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
